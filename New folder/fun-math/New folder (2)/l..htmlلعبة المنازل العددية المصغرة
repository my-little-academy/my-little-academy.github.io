<body>
    <div class="container">
        <h1>لعبة المنازل العددية المصغرة</h1>
        <p>تعلم المنازل العددية باستخدام مكعبات مصغرة</p>
        
        <div class="controls">
            <input type="number" id="numberInput" min="0" max="9999" placeholder="أدخل رقماً">
            <button onclick="showNumber()">اظهر العدد</button>
            <button onclick="clearAll()">مسح الكل</button>
        </div>
        
        <div class="result" id="result"></div>
        
        <div class="visual-container" id="visualRepresentation">
            <!-- التمثيل المرئي سيظهر هنا -->
        </div>
        
        <div class="place-value">
            <div class="box">
                <div class="box-title">الوحدات</div>
                <div class="shape-container" id="units">
                    <!-- المكعبات الصغيرة ستضاف هنا -->
                </div>
                <div class="value-label">كل مكعب = 1</div>
            </div>
            <div class="box">
                <div class="box-title">العشرات</div>
                <div class="shape-container" id="tens">
                    <!-- القضبان ستضاف هنا -->
                </div>
                <div class="value-label">كل قضيب = 10</div>
            </div>
            <div class="box">
                <div class="box-title">المئات</div>
                <div class="shape-container" id="hundreds">
                    <!-- الصفائح ستضاف هنا -->
                </div>
                <div class="value-label">كل صفيحة = 100</div>
            </div>
            <div class="box">
                <div class="box-title">الآلاف</div>
                <div class="shape-container" id="thousands">
                    <!-- المكعبات الكبيرة ستضاف هنا -->
                </div>
                <div class="value-label">كل مكعب كبير = 1000</div>
            </div>
        </div>
        
        <div class="explanation">
            <h3>كيفية اللعب:</h3>
            <p>1. أدخل رقماً بين 0 و 9999 ثم اضغط "اظهر العدد"</p>
            <p>2. شاهد تمثيل العدد بالمكعبات والقضبان والصفائح</p>
            <p>3. لاحظ العلاقة بين المنازل:</p>
            <p>- 10 مكعبات = 1 قضيب</p>
            <p>- 10 قضبان = 1 صفيحة</p>
            <p>- 10 صفائح = 1 مكعب كبير</p>
            <p>4. جرب أرقاماً مختلفة لفهم الفكرة</p>
        </div>
    </div>

    <script>
        function showNumber() {
            const numberInput = document.getElementById('numberInput');
            const resultDiv = document.getElementById('result');
            const visualContainer = document.getElementById('visualRepresentation');
            const number = parseInt(numberInput.value);
            
            if (isNaN(number) || number < 0 || number > 9999) {
                alert("الرجاء إدخال رقم بين 0 و 9999");
                return;
            }
            
            resultDiv.textContent = "العدد: " + number;
            visualContainer.innerHTML = '';
            
            // تفكيك العدد إلى منازله
            let remaining = number;
            
            const thousands = Math.floor(remaining / 1000);
            remaining = remaining % 1000;
            
            const hundreds = Math.floor(remaining / 100);
            remaining = remaining % 100;
            
            const tens = Math.floor(remaining / 10);
            const units = remaining % 10;
            
            // عرض التمثيل المرئي الكلي
            createVisualRepresentation(visualContainer, thousands, hundreds, tens, units);
            
            // عرض الأشكال في كل قسم
            displayUnits('units', units);
            displayTens('tens', tens);
            displayHundreds('hundreds', hundreds);
            displayThousands('thousands', thousands);
        }
        
        function createVisualRepresentation(container, thousands, hundreds, tens, units) {
            // عرض المكعبات الكبيرة (الآلاف)
            for (let i = 0; i < thousands; i++) {
                const bigCube = document.createElement('div');
                bigCube.className = 'big-cube';
                container.appendChild(bigCube);
            }
            
            // عرض الصفائح (المئات)
            for (let i = 0; i < hundreds; i++) {
                const flat = document.createElement('div');
                flat.className = 'flat';
                
                for (let j = 0; j < 5; j++) { // عرض 5 قضبان فقط للتبسيط
                    const rod = document.createElement('div');
                    rod.className = 'rod';
                    rod.style.transform = 'rotate(90deg)';
                    flat.appendChild(rod);
                }
                
                container.appendChild(flat);
            }
            
            // عرض القضبان (العشرات)
            for (let i = 0; i < tens; i++) {
                const rod = document.createElement('div');
                rod.className = 'rod';
                
                for (let j = 0; j < 5; j++) { // عرض 5 مكعبات فقط للتبسيط
                    const cube = document.createElement('div');
                    cube.className = 'cube';
                    rod.appendChild(cube);
                }
                
                container.appendChild(rod);
            }
            
            // عرض المكعبات الصغيرة (الوحدات)
            for (let i = 0; i < units; i++) {
                const cube = document.createElement('div');
                cube.className = 'cube';
                container.appendChild(cube);
            }
        }
        
        function displayUnits(containerId, count) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            for (let i = 0; i < Math.min(count, 25); i++) { // حد أقصى 25 مكعب للعرض
                const cube = document.createElement('div');
                cube.className = 'cube';
                container.appendChild(cube);
            }
            
            if (count > 25) {
                const label = document.createElement('div');
                label.textContent = `+ ${count-25}`;
                label.style.fontSize = '10px';
                label.style.marginTop = '2px';
                container.appendChild(label);
            }
        }
        
        function displayTens(containerId, count) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            for (let i = 0; i < Math.min(count, 3); i++) { // حد أقصى 3 قضبان للعرض
                const rod = document.createElement('div');
                rod.className = 'rod';
                
                for (let j = 0; j < 5; j++) { // عرض 5 مكعبات فقط في كل قضيب
                    const cube = document.createElement('div');
                    cube.className = 'cube';
                    rod.appendChild(cube);
                }
                
                container.appendChild(rod);
            }
            
            if (count > 3) {
                const label = document.createElement('div');
                label.textContent = `+ ${count-3}`;
                label.style.fontSize = '10px';
                label.style.marginTop = '2px';
                container.appendChild(label);
            }
        }
        
        function displayHundreds(containerId, count) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            for (let i = 0; i < Math.min(count, 2); i++) { // حد أقصى 2 صفيحة للعرض
                const flat = document.createElement('div');
                flat.className = 'flat';
                
                for (let j = 0; j < 5; j++) { // عرض 5 قضبان فقط في كل صفيحة
                    const rod = document.createElement('div');
                    rod.className = 'rod';
                    rod.style.transform = 'rotate(90deg)';
                    flat.appendChild(rod);
                }
                
                container.appendChild(flat);
            }
            
            if (count > 2) {
                const label = document.createElement('div');
                label.textContent = `+ ${count-2}`;
                label.style.fontSize = '10px';
                label.style.marginTop = '2px';
                container.appendChild(label);
            }
        }
        
        function displayThousands(containerId, count) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            for (let i = 0; i < count; i++) {
                const bigCube = document.createElement('div');
                bigCube.className = 'big-cube';
                container.appendChild(bigCube);
            }
        }
        
        function clearAll() {
            document.getElementById('numberInput').value = '';
            document.getElementById('result').textContent = '';
            document.getElementById('visualRepresentation').innerHTML = '';
            document.getElementById('thousands').innerHTML = '';
            document.getElementById('hundreds').innerHTML = '';
            document.getElementById('tens').innerHTML = '';
            document.getElementById('units').innerHTML = '';
        }
    </script>
</body>
